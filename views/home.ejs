<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://kit.fontawesome.com/11e39c886c.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@1,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
</head>
<body>
   <h1 id="page-heading">
    <i class="fa-regular fa-address-book"></i>
    My Contacts List 
</h1> 

  <div class="content">
   <ul>
    <% for(let i of contact_list) { %>
        <div class="contact-container">
            <li>
                <div class="details">
                    <p><i class="fa-regular fa-user"></i><%= i.name %></p>
                    <p><i class="fa-solid fa-phone"></i><%= i.phone %></p>
                </div>
                <div class="delete-button">
                    <a href="/delete-contact/?id=<%= i.id %>"><i class="fa-solid fa-trash"></i></a>
                </div>
            </li>
        </div>
            
    <% } %>
    
</ul>
</div>
   <div class="form">
    <form action="/contact" method="POST">

        <label for="Name"><span>Name:</span></label>
        <input type="text" name="name" id="" placeholder="Enter Name" required>
        <label for="Name"><span>Phone:</span></label>
        <input type="text" name="phone" id="" placeholder="Enter Phone Number" required minlength="8" maxlength="10">
        <div class="btn">
            <button type="submit"><span>Add Contacts</span></button>
        </div>
        
    </form>
   </div>
   <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
  <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
  <script src="/assets/js/script.js"></script>
</body>
</html>

